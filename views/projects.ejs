<%- include('partials/head') %> 

<h1 class="container-top">ناساندنی پڕۆژەکان</h1>
<div class="flex-container" dir="rtl">
    <% for(let i = data.length -1; i >=0; i--){ %>
        <div class="contain" onclick="location.href='/p/<%=data[i].param %>'" style="cursor: pointer;">
            <div class="header-photo" style="position: relative;">
                <img src="uploads/<%= data[i].img %>" alt="" srcset="" style="width: 100%; height: 100%;">
                <div class="header-details">
                    <h1 class="header-title"><%= data[i].title.substring(0,25) %></h1>
                    <p class="header-text" id="innerText" dir="rtl"><%= data[i].description.substring(0,57)%> ...</p>
                    <p class="header-date"><%= data[i].date %> </p>
                </div>

            </div>
        </div>
    <% }%>
</div>


